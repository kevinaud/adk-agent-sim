{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://adk-agent-sim/golden-trace.schema.json",
  "title": "Golden Trace",
  "description": "A recorded session of human-simulated agent execution for use as ground truth in ADK evaluation",
  "type": "object",
  "required": ["metadata", "trace"],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Session metadata",
      "required": ["agent_name", "timestamp", "user_query"],
      "properties": {
        "agent_name": {
          "type": "string",
          "description": "Name of the agent that was simulated"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the trace was exported"
        },
        "user_query": {
          "type": "string",
          "description": "The initial user query or problem being solved"
        }
      }
    },
    "trace": {
      "type": "array",
      "description": "Ordered list of steps taken during the session",
      "items": {
        "type": "object",
        "required": ["step_index", "type"],
        "properties": {
          "step_index": {
            "type": "integer",
            "minimum": 0,
            "description": "Zero-based index of this step in the trace"
          },
          "type": {
            "type": "string",
            "enum": ["tool_call", "final_answer"],
            "description": "Type of step"
          },
          "tool_name": {
            "type": "string",
            "description": "Name of the tool called (required for tool_call type)"
          },
          "arguments": {
            "type": "object",
            "description": "Arguments passed to the tool (for tool_call type)"
          },
          "output": {
            "description": "Return value from tool execution (for tool_call type)"
          },
          "content": {
            "type": "string",
            "description": "Final text response to the user (for final_answer type)"
          }
        },
        "allOf": [
          {
            "if": {
              "properties": { "type": { "const": "tool_call" } }
            },
            "then": {
              "required": ["tool_name", "arguments"]
            }
          },
          {
            "if": {
              "properties": { "type": { "const": "final_answer" } }
            },
            "then": {
              "required": ["content"]
            }
          }
        ]
      }
    }
  },
  "examples": [
    {
      "metadata": {
        "agent_name": "CalculatorAgent",
        "timestamp": "2025-12-22T10:00:00Z",
        "user_query": "Calculate 5 * 5 + 10"
      },
      "trace": [
        {
          "step_index": 0,
          "type": "tool_call",
          "tool_name": "multiply",
          "arguments": { "a": 5, "b": 5 },
          "output": 25
        },
        {
          "step_index": 1,
          "type": "tool_call",
          "tool_name": "add",
          "arguments": { "a": 25, "b": 10 },
          "output": 35
        },
        {
          "step_index": 2,
          "type": "final_answer",
          "content": "The result is 35."
        }
      ]
    }
  ]
}
